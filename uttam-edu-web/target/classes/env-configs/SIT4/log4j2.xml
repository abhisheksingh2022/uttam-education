		-->
		 
		<!-- Metrics Logging -->
		<logger name="com.hixapi.framework.common.context.MetricEvent" additivity="false">
			<AppenderRef ref="MetricAsync" level="INFO" />
		</logger>
		<!-- Section for all Application logging ends -->
	</Loggers>
</Configuration>